<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
<!--    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />-->
<!--    <uses-permission android:name="com.google.android.gms.permission.AD_ID" />-->
    <!-- Android 13+ の通知ランタイム権限 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:name=".CaregiverApp"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CaregiverHumanMed">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CaregiverHumanMed">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- 通知タップでアプリを開く（必要ならクイズ画面へ深い遷移も可能）-->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="caregiver" android:host="reminder" />
            </intent-filter>
        </activity>

        <!-- AdMob App ID（ビルドタイプで切替、debug はテストID） -->
<!--        <meta-data-->
<!--            android:name="com.google.android.gms.ads.APPLICATION_ID"-->
<!--            android:value="${admob_app_id}" />-->

<!--        <meta-data-->
<!--            android:name="com.google.android.gms.ads.flag.OPTIMIZE_AD_LOADING"-->
<!--            android:value="true" />-->

    </application>
</manifest>
