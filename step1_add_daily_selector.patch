+package jp.msaitoappdev.caregiver.humanmed.ui.quiz
+
+import jp.msaitoappdev.caregiver.humanmed.data.Question
+import java.util.Calendar
+import kotlin.random.Random
+
+/**
+ * 「毎日3問」を決めるセレクタ。
+ * 同一日内では同じ順序になるよう、日付からシード値を作ってシャッフルします。
+ *
+ * 注: java.time（LocalDate）を使わず Calendar ベースにしているため、
+ *     desugaring 設定なしでも minSdk=24 で実行可能です。
+ */
+class DailyQuestionSelector {
+    /**
+     * @param all    全問題のリスト
+     * @param count  取り出す件数（既定=3）
+     * @param calendar 日付取得に使う Calendar（テスト容易性のため引数に）
+     */
+    fun select(
+        all: List<Question>,
+        count: Int = 3,
+        calendar: Calendar = Calendar.getInstance()
+    ): List<Question> {
+        if (all.isEmpty() || count <= 0) return emptyList()
+
+        // 日付 → シード（YYYYMMDD を long にした単純なキー）
+        val y = calendar.get(Calendar.YEAR)
+        val m = calendar.get(Calendar.MONTH) + 1  // Calendar.MONTH は 0 始まり
+        val d = calendar.get(Calendar.DAY_OF_MONTH)
+        val seed = y * 10000L + m * 100L + d
+
+        // 同一日内では同じ順序になるよう、seed を使ってシャッフル
+        val shuffled = all.shuffled(Random(seed))
+        return shuffled.take(minOf(count, all.size))
+    }
+}
